<?xml version="1.0"?><!-- ======================================================================= --><!-- ANT-Makefile for JDBF (C)2002 JDBF Developement Team                    --><!-- Created $Revision: 1.10 $ for JDBF                                      --><!-- Last changed by $Author 											     --><!-- ======================================================================= --><project name="JDBF (Java object Relational mapping system)" default="dist" basedir=".">  <!-- ===================================================================== -->  <!-- PROPERTIES                                                            -->  <!-- ===================================================================== -->      <property name="src.dir" value="./src"/>			<property name="release" value="rc0_1_1"/>			<property name="zip.dir" value="../"/>	    <property name="build.dir" value="classes"/>    <property name="dist.dir"  value="lib"/>    <property name="manifest" value="src/manifest.mf" />	    <property name="javadocs.dir" value="docs/api" />     <property name="packages" value="org.jdbf.*" />    <property name="Name" value="JDBF (Java object Relational mapping system)" />  	  <!-- =================================================================== -->  <!-- Global initialization                                               -->  <!-- =================================================================== -->	<target name="init">	  <mkdir dir="${build.dir}"/>		  <mkdir dir="${dist.dir}"/>		  <echo message=""/>	  <echo message=""/>	  <echo message=""/>	  <echo message="------------------- ${Name} RC 0.1.1 -----------------------------"/>	  <echo message=""/>	  <echo message=" available targets are:"/>	  <echo message=""/>	  <echo message="   compile      --> compiles the source code to the tree under ${build.dir}"/>	  <echo message="   dist         --> generates the ${name}.jar file"/>	  <echo message="   javadocs     --> writes the documentation to ${docs.dir}"/>				  <echo message="   source-dist       --> writes a zip file containing all source file"/>	  <echo message="   clean        --> cleans up the ${build.dir} directory"/>	  <echo message=""/>	  <echo message=" See the comments inside the build.xml file for more details."/>	  <echo message="-------------------------------------------------------------"/>	  <echo message=""/>	  <echo message=""/>	</target>  <!-- ===================================================================== -->  <!-- COMPILE                                                               -->  <!-- ===================================================================== -->  	<target name="compile" depends="init">		  	  	  <javac srcdir="${src.dir}" destdir="${build.dir}"	         deprecation="on" optimize="on">	  </javac>	</target>    <!-- ===================================================================== -->  <!-- JAR FILE                                                              -->  <!-- ===================================================================== -->	<target name="dist" depends="compile">				<copy todir="${build.dir}">			  <fileset dir=".">			    				<patternset>			      <include name="messages.properties" />				  <include name="messages_it.properties" />				  <include name="messages_de.properties" />				  <include name="messages_fr.properties" />			    </patternset>			  </fileset>        </copy>				<jar jarfile="${dist.dir}/jdbf-bin-${release}.jar" basedir="${build.dir}" manifest="${manifest}"/>	</target>  <!-- ===================================================================== -->  <!-- JAVADOC                                                               -->  <!-- ===================================================================== -->  <target name="javadocs" depends="init">    <mkdir dir="${javadocs.dir}" />            <javadoc packagenames="${packages}"                 sourcepath="${src.dir}"             destdir="${javadocs.dir}"             author="true"             version="true"             windowtitle="${Name} API"             doctitle="${Name}"             bottom="Copyright &#169; 2002 JDBF Development Team."    />      </target>	  <!-- ===================================================================== -->  <!-- ZIP SOURCE DIST                                                       -->  <!-- ===================================================================== -->    	<target name="source-dist" depends="clean">  		<zip destfile="jdbf-src-${release}.zip"	       	 basedir="../jdbf"	         update="true"	    />  		  	</target>   <!-- =================================================================== -->  <!-- CLEAN                                                               -->  <!-- =================================================================== -->  <target name="clean" depends="init">		<delete dir="${build.dir}"/>			</target></project><!-- End of build.xml -->